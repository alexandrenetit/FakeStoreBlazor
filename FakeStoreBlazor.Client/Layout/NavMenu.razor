@* FakeStoreBlazor.Client/Layout/NavMenu.razor *@

<link href="~/css/navmenu.css" rel="stylesheet" />

<div class="top-row ps-3 navbar navbar-dark bg-primary">
    <div class="container-fluid">
        <a class="navbar-brand" href="">
            <img src="logo.svg" alt="Logo" width="30" height="30" class="d-inline-block align-top" />
            FakeStore
        </a>
        <button class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable">
    <nav class="nav flex-column">
        <!-- Home -->
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        <!-- Seção de Produtos (Menu Dropdown) -->
        <div class="nav-item px-3">
            <div class="nav-link dropdown-toggle" @onclick="ToggleProductsMenu">
                <span class="bi bi-box-seam-fill" aria-hidden="true"></span> Gestão de Produtos
                <span class="bi @productsMenuIcon float-end" aria-hidden="true"></span>
            </div>
            <div class="@productsMenuCssClass">
                <!-- Lista de Produtos -->
                <NavLink class="nav-link ps-4" href="products" ActiveClass="active-submenu">
                    <span class="bi bi-list-ul" aria-hidden="true"></span> Todos os Produtos
                </NavLink>
                <!-- Adicionar Produto -->
                <NavLink class="nav-link ps-4" href="products/add" ActiveClass="active-submenu">
                    <span class="bi bi-plus-circle" aria-hidden="true"></span> Novo Produto
                </NavLink>
            </div>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = false; // MENU ABERTO POR PADRÃO
    private bool collapseProductsMenu = true;
    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;
    private string? productsMenuCssClass => collapseProductsMenu ? "collapse" : "show";
    private string productsMenuIcon => collapseProductsMenu ? "bi-chevron-down" : "bi-chevron-up";
    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
    private void ToggleProductsMenu()
    {
        collapseProductsMenu = !collapseProductsMenu;
    }
}